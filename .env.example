# Base URLs
# If NEXT_PUBLIC_APP_URL is not set, Vercel's VERCEL_URL is used automatically; otherwise http://localhost:3000
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Database (required for auth, checkout, and order history)
DATABASE_URL="postgresql://user:password@localhost:5432/dropshipping"
DIRECT_URL="postgresql://user:password@localhost:5432/dropshipping?schema=public"

# Auth/session secrets
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="changeme"
AUTH_SECRET="changeme"

# OAuth Providers (optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Stripe (required to enable checkout)
STRIPE_SECRET_KEY="sk_test_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
STRIPE_SUCCESS_URL="http://localhost:3000/checkout/success"
STRIPE_CANCEL_URL="http://localhost:3000/checkout/cancel"

# Cloudflare Turnstile (optional but recommended)
TURNSTILE_SITE_KEY=""
NEXT_PUBLIC_TURNSTILE_SITE_KEY=""
TURNSTILE_SECRET_KEY=""
TURNSTILE_BYPASS=false

# Cloudflare R2 (S3-compatible) for uploads
R2_ENDPOINT="https://<account-id>.r2.cloudflarestorage.com"
R2_BUCKET="your-bucket"
R2_ACCESS_KEY_ID=""
R2_SECRET_ACCESS_KEY=""
R2_PUBLIC_BASE_URL="https://cdn.example.com"

# Admin access for uploads (optional)
ADMIN_ACCESS_TOKEN="changeme"

# Resend (optional email)
RESEND_API_KEY=""

# Shipping (optional)
SHIPPO_API_TOKEN=""

# Rate limiting (optional)
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""

# Cron (required for scheduled jobs)
CRON_SECRET="changeme"

# Tooling
SKIP_ENV_VALIDATION="false"
